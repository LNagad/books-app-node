<div class="d-flex w-100  justify-content-between">
    <h3>Authors Page</h3>
    <a class="float-end btn btn-outline-success" href="/create-author">Create author</a>
</div>

<div>
    <div class="d-flex mt-5 w-100">
        {{#if hasAuthor}}
        {{#each authors as |p| }}
        <div class="card me-2 col-3">
            <div class="card-body">
                <h6 class="card-title mb-3">{{p.name}}</h6>
                <a class="btn btn-outline-primary" href="/edit-author/{{p.id}}?edit=true">Edit
                </a>
                <a class="delete-author btn btn-outline-danger" href="/delete-author/{{p.id}}">Delete
                </a>
            </div>
        </div>
        {{/each}}
        {{else}}
        <h1>No authors found!</h1>
        {{/if}}
    </div>
</div>