<div class="d-flex w-100  justify-content-between">
  <h3>Home Page</h3>
</div>

<div class="d-flex justify-content-between">
  <div class="mt-5 col-2">
    <div class="card">
      <div class="card-header text-center fs-4">
        Categories
      </div>
      <div class="card-body">
        <form method="post" action="/filter-books">
          {{#each categories as |c| }}
            <div class="form-check">
              <input name="categoryFilter" class="form-check-input" type="checkbox" 
                  value="{{c.id}}" id="{{c.name}}">
              <label class="form-check-label" for="{{c.name}}">{{c.name}}</label>
            </div>
          {{/each}}
          <button class="mt-4 btn btn-outline-primary" type="submit">Filter</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-10 d-flex mt-5 justify-content-evenly flex-wrap">
    {{#if hasBook}}
    {{#each books as |p| }}
    <div class="card col-3 mb-4 ">
      <div class="card-header d-flex justify-content-center">
        <img class="card-img-top img-responsive" src="{{p.imagePath}}" alt="">
      </div>
      <div class="card-body">
        <h6 class="card-title mb-3"><span class="fw-bold"> Title: </span>{{p.title}}</h6>
        <h6 class="card-title mb-3"><span class="fw-bold">Year released:</span>  {{p.yearReleased}}</h6>
        <h6 class="card-title mb-3"><span class="fw-bold">Publisher: </span> {{p.publisher}}</h6>
        <h6 class="card-title mb-3"><span class="fw-bold">Author:</span>  {{p.author}}</h6>
      </div>
    </div>
    {{/each}}
    {{else}}
    <h1>No books found!</h1>
    {{/if}}
  </div>
</div>