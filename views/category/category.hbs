<div class="d-flex w-100  justify-content-between">
    <h3>Categories Page</h3>
    <a class="float-end btn btn-outline-success" href="/create-category">Create category</a>
</div>

<div>
    <div class="d-flex mt-5 w-100">
        {{#if hasCategories}}
        {{#each categories as |cat| }}
        <div class="card me-2 col-3">
            <div class="card-body">
                <h6 class="card-title mb-3">{{cat.name}}</h6>
                <a class="btn btn-outline-primary" href="/edit-category/{{cat.id}}?edit=true">Edit
                </a>
                <a class="btn btn-outline-danger" href="/delete-category/{{cat.id}}">Delete
                </a>
            </div>
        </div>
        {{/each}}
        {{else}}
        <h1>No categories found!</h1>
        {{/if}}
    </div>
</div>